{
    "providers":{
        "angaza":{
            "name":"angaza",
            "tables":{
                "accounts":"accounts",
                "users":"users",
                "payments":"payments",
                "replacements":"replacements",
                "stock":"stock_unit_statuses",
                "applications":"prospects",
                "clients":"clients"
            }
        },
        "upya":{
            "name":"upya",
            "tables":{
                "accounts":"contracts",
                "users":"",
                "payments":"payments",
                "replacements":"",
                "stock":"assets",
                "applications":"applications",
                "clients":"clients"
            },
            "sep":";"
        }
    },
    "core":{
        "accounts":{
            "update_query":{
                "sql":"select {} from core.accounts a where a.registration_date_utc is not null and a.zoho_id is not null"
            }
        },
        "users":{},
        "payments":{
            "update_query":{
                "sql":"select {} from core.payments a where (a.effective_utc > NOW() - INTERVAL '10 DAYS' or (a.reversal_external_id is not null and a.effective_utc > NOW() - INTERVAL '60 DAYS')) and a.zoho_id is not null"
            }
        },
        "replacements":{},
        "stock":{},
        "applications":{
            "update_query":{
                "sql":"select {} from core.applications a left join core.accounts b on a.account_external_id = b.account_external_id where (a.submitted_utc > NOW() - INTERVAL '15 DAYS'  or (b.account_external_id is not null and b.registration_date_utc > NOW() - INTERVAL '15 DAYS')) and a.zoho_id is not null"
            }
        },
        "clients":{}
    },
    "zoho":{
        "users":{
            "table":"users",
            "form":"Users_Data_Import",
            "slice_length":500
        },
        "applications":{
            "table":"applications",
            "form":"Applications_Data_Import",
            "slice_length":350
        }
    }
}